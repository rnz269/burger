<h1>Burgers!</h1>

<h3>Please enter the burger you wish to eat.</h3>

<ul>
  {{#each burgers}}
  	<ul>
  	   <span><p>(ID {{this.id}}) : {{this.burger_name}}</p></span>
       <span><p>Has this been devoured? {{this.devoured}}</p></span>
        <form action="/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
         <button type="submit">Devour Burger</button>
        </form>
  	</ul>
  {{/each}}
</ul>

<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burger"></textarea>

  	<button type="submit">Add Burger</button>
  </form>
</div>

